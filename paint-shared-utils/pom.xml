<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.jjabakker</groupId>
        <artifactId>paint-parent</artifactId>
        <version>0.0.3-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>paint-shared-utils</artifactId>
    <packaging>jar</packaging>

    <name>Paint Shared Utils</name>
    <description>Shared utilities for the Paint project</description>

    <properties>
        <!-- reproducible builds -->
        <project.build.outputTimestamp>2025-10-26T11:42:24Z</project.build.outputTimestamp>

        <!-- default: local build copies to Fiji -->
        <skip.copy.to.fiji>false</skip.copy.to.fiji>
    </properties>

    <dependencies>
        <!-- JSON -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.11.0</version>
        </dependency>

        <!-- Tablesaw -->
        <dependency>
            <groupId>tech.tablesaw</groupId>
            <artifactId>tablesaw-core</artifactId>
            <version>0.43.1</version>
        </dependency>

        <!-- CSV -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-csv</artifactId>
            <version>1.10.0</version>
        </dependency>

        <!-- Image I/O -->
        <dependency>
            <groupId>com.twelvemonkeys.imageio</groupId>
            <artifactId>imageio-tiff</artifactId>
            <version>3.10.1</version>
        </dependency>

        <!-- PDF generation -->
        <dependency>
            <groupId>org.apache.pdfbox</groupId>
            <artifactId>pdfbox</artifactId>
            <version>2.0.30</version>
        </dependency>

        <dependency>
            <groupId>de.rototor.pdfbox</groupId>
            <artifactId>graphics2d</artifactId>
            <version>0.37</version>
        </dependency>

        <!-- macOS plist reader -->
        <dependency>
            <groupId>com.googlecode.plist</groupId>
            <artifactId>dd-plist</artifactId>
            <version>1.23</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Copy JAR into Fijiâ€™s plugins folder (only on macOS, local builds) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jar-to-fiji</id>
                        <phase>package</phase>
                        <goals><goal>run</goal></goals>
                        <configuration>
                            <skip>${skip.copy.to.fiji}</skip>
                            <target>
                                <!-- Detect macOS -->
                                <condition property="is.macos">
                                    <os family="mac"/>
                                </condition>

                                <!-- Only copy if on macOS -->
                                <echo message="â„¹ï¸ Checking OS before Fiji copy..."/>
                                <fail unless="is.macos" message="Skipping Fiji copy (not macOS)."/>

                                <copy file="${project.build.directory}/${project.build.finalName}.jar"
                                      todir="/Applications/Fiji.app/plugins"
                                      overwrite="true"
                                      failonerror="false"/>
                                <echo message="âœ… Copied ${project.build.finalName}.jar to Fiji plugins folder"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- ðŸ‘‡ CI profile: automatically skips copy when CI=true -->
    <profiles>
        <profile>
            <id>ci-build</id>
            <activation>
                <property>
                    <name>env.CI</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <skip.copy.to.fiji>true</skip.copy.to.fiji>
            </properties>
        </profile>
    </profiles>

</project>