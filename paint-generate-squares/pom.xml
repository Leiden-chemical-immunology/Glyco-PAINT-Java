<?xml version="1.0" encoding="UTF-8"?>
<!-- Maven project descriptor for Paint Generate Squares application -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- Inherit groupId, version, and common settings from parent project -->
    <parent>
        <groupId>com.github.jjabakker</groupId>
        <artifactId>paint-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <!-- Unique artifactId for this module -->
    <artifactId>paint-generate-squares</artifactId>
    <packaging>jar</packaging> <!-- This module produces a standalone JAR -->

    <!-- Basic project metadata -->
    <name>Paint Generate Squares</name>
    <description>Paint desktop application</description>
    <url>http://example.com/paint-app</url>
    <inceptionYear>2025</inceptionYear>

    <organization>
        <name>jjabakker</name>
        <url>http://example.com</url>
    </organization>

    <!-- Licensing information -->
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <!-- Developer information -->
    <developers>
        <developer>
            <id>hans</id>
            <name>Hans Bakker</name>
            <email>hans@example.com</email>
        </developer>
    </developers>

    <!-- Optional contributor info -->
    <contributors>
        <contributor>
            <name>Contributor Name</name>
        </contributor>
    </contributors>

    <!-- SCM metadata (GitHub) -->
    <scm>
        <connection>scm:git:https://github.com/jjabakker/paint-app.git</connection>
        <developerConnection>scm:git:https://github.com/jjabakker/paint-app.git</developerConnection>
        <url>https://github.com/jjabakker/paint-app</url>
    </scm>

    <!-- Issue tracking system -->
    <issueManagement>
        <system>GitHub Issues</system>
        <url>https://github.com/jjabakker/paint-app/issues</url>
    </issueManagement>

    <!-- CI system -->
    <ciManagement>
        <system>GitHub Actions</system>
        <url>https://github.com/jjabakker/paint-app/actions</url>
    </ciManagement>

    <properties>
        <!-- Used by license reporting and JAR manifest -->
        <license.licenseName>MIT</license.licenseName>
        <license.copyrightOwners>Hans Bakker</license.copyrightOwners>

        <!-- ðŸ•’ Output timestamp used in reproducible builds and manifest -->
        <project.build.outputTimestamp>2025-09-23T08:55:00Z</project.build.outputTimestamp>
    </properties>

    <!-- Optional mailing list -->
    <mailingLists>
        <mailingList>
            <name>Users</name>
            <subscribe>mailto:users@example.com</subscribe>
            <unsubscribe>mailto:users@example.com</unsubscribe>
            <post>mailto:users@example.com</post>
            <archive>http://example.com/mailing-list/users</archive>
        </mailingList>
    </mailingLists>

    <!-- Project dependencies -->
    <dependencies>

        <!-- Internal shared module -->
        <dependency>
            <groupId>com.github.jjabakker</groupId>
            <artifactId>paint-shared-utils</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>

        <!-- ImageJ and Fiji/TrackMate stack -->
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
            <version>1.54h</version>
        </dependency>

        <dependency>
            <groupId>sc.fiji</groupId>
            <artifactId>TrackMate</artifactId>
            <version>7.14.0</version>
        </dependency>

        <dependency>
            <groupId>sc.fiji</groupId>
            <artifactId>fiji-lib</artifactId>
            <version>2.1.3</version>
        </dependency>

        <dependency>
            <groupId>net.imglib2</groupId>
            <artifactId>imglib2</artifactId>
            <version>7.1.5</version>
        </dependency>

        <!-- Bio-Formats stack -->
        <dependency>
            <groupId>ome</groupId>
            <artifactId>bio-formats_plugins</artifactId>
            <version>6.13.0</version>
        </dependency>

        <dependency>
            <groupId>ome</groupId>
            <artifactId>formats-gpl</artifactId>
            <version>6.13.0</version>
        </dependency>

        <dependency>
            <groupId>ome</groupId>
            <artifactId>formats-api</artifactId>
            <version>6.13.0</version>
        </dependency>

        <!-- Tabular data handling -->
        <dependency>
            <groupId>tech.tablesaw</groupId>
            <artifactId>tablesaw-core</artifactId>
            <version>0.43.1</version>
        </dependency>

        <!-- CSV parsing -->
        <dependency>
            <groupId>com.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>5.9</version>
        </dependency>

        <!-- JSON parsing -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.11.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- ðŸ§© Build a fat JAR (with dependencies) using maven-assembly-plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.6.0</version>
                <configuration>
                    <!-- Use built-in "jar-with-dependencies" descriptor -->
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <!-- Set the entry point of the application -->
                            <mainClass>generatesquares.GenerateSquares</mainClass>

                            <!-- Add automatic implementation/specification entries -->
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                        <!-- âœ¨ Custom metadata for use at runtime (e.g., JarInfoLogger) -->
                        <manifestEntries>
                            <Implementation-Title>${project.name}</Implementation-Title>
                            <Implementation-Version>${project.version}</Implementation-Version>
                            <Implementation-Vendor>${project.organization.name}</Implementation-Vendor>
                            <Implementation-Date>${maven.build.timestamp}</Implementation-Date>
                            <Specification-Title>${project.name}</Specification-Title>
                            <Specification-Version>${project.version}</Specification-Version>
                            <Specification-Vendor>${project.organization.name}</Specification-Vendor>
                        </manifestEntries>
                    </archive>
                </configuration>
                <executions>
                    <!-- Bind the fat JAR build to the package phase -->
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- Maven repositories for Fiji/ImageJ/Bio-Formats dependencies -->
    <repositories>
        <repository>
            <id>scijava.public</id>
            <url>https://maven.scijava.org/content/groups/public</url>
        </repository>
        <repository>
            <id>ome.releases</id>
            <url>https://artifacts.openmicroscopy.org/artifactory/maven/</url>
        </repository>
    </repositories>

</project>